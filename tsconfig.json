{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react",
    "baseUrl": "./src",
    "rootDir": "./src",
    "outDir": "build",
    "experimentalDecorators":true,
    "paths": {
      "@kits": [
        "./kits"
      ],
      "@config": [
        "./config"
      ],
      "@assets/*": [
        "./assets/*"
      ],
      "@components": [
        "./components"
      ],
      "@commons": [
        "./commons"
      ]
    }
  },
  "include": [
    "src"
  ]
}
